{
  "manifest_version": 3,
  "name": "CrucibleReviewFormatter",
  "description": "CRF alerts when a crucible review is completed",
  "version": "1.0",
  "permissions": ["contextMenus"],
  "content_scripts": [
    {
      "matches": ["*://*/cru/*"],
      "js": ["background.js"]
    }
  ],
  "icons": {
      "16": "images/crf-16.png",
      "32": "images/crf-32.png",
      "48": "images/crf-48.png",
      "128": "images/crf-128.png"
  }
}